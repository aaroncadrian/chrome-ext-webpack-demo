{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/chrome", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
